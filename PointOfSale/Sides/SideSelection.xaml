<Page x:Class="PointOfSale.SideSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SideSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="150"/>
            </Style>
        </WrapPanel.Resources>
        <Button >Fryceritops</Button>
        <Button >Triceritots</Button>
        <Button >Meteor Mac &amp; Cheese</Button>
        <Button >Mozzarella Sticks</Button>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Viewbox Height="20" Margin="10">
                <RadioButton Width="135" >Small</RadioButton>
            </Viewbox>
            <Viewbox Height="20" Margin="10" >
                <RadioButton Width="135">Medium</RadioButton>
            </Viewbox>
            <Viewbox Height="20" Margin="10">
                <RadioButton Width="135">Large</RadioButton>
            </Viewbox>
        </StackPanel>




    </WrapPanel>
</Page>
