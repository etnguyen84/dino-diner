<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="ComboSelection">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </Grid.Resources>
        <Button Click= "SelectCustomize" Grid.Row="0" Grid.Column="0">
            <StackPanel >
                <Image Height="95" Width ="95"  Source="/entreeImgs/DinoDiner-01.png" Margin="10"/>
                <TextBlock HorizontalAlignment="Center">Brontowurst Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="1" Grid.Column="0" >
            <StackPanel >
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-05.png" Margin="10"/>
                <TextBlock HorizontalAlignment="Center">Steakosaurus Burger Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="2" Grid.Column="0">
            <StackPanel>
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-06.png" Margin="10" />
                <TextBlock HorizontalAlignment="Center">T-Rex King Burger Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="0" Grid.Column="1">
            <StackPanel>
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-03.png" Margin="10" />
                <TextBlock HorizontalAlignment="Center">Prehistoric PB&amp;J Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-04.png" Margin="10" />
                <TextBlock HorizontalAlignment="Center">Pterodactyl Wings Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="2" Grid.Column="1">
            <StackPanel>
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-07.png" Margin="10" />
                <TextBlock HorizontalAlignment="Center">Veloci-wrap Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button Click= "SelectCustomize" Grid.Row="0" Grid.Column="2">
            <StackPanel>
                <Image Height="95" Width ="95" Source="/entreeImgs/DinoDiner-02.png" Margin="10" />
                <TextBlock HorizontalAlignment="Center">Dino-Nuggets Combo</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
    

</Page>
